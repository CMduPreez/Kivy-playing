#:import MDTextField kivymd.uix.textfield.MDTextField
#:import NavigationLayout kivymd.uix.navigationdrawer.NavigationLayout

<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height


        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "test.jpg"

    MDLabel:
        text: "Chatnalysis"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "The chat analysis app"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list



Screen:

    NavigationLayout:

        ScreenManager:
            Screen1:
            Screen2:

            <Screen1>:
                name: "screen1"
                MDRectangleFlatButton:
                    text: 'screen2'
                    pos_hint: {'center_x':0.5, 'center_y' : 0.5}
                    on_press: root.manager.current = "screen2"

				MDTextFieldRound:
				    id: search_word
				    multiline: False
				    icon_left : 'magnify'
				    on_text_validate : print(app.search(self.text))
                BoxLayout:

                    orientation: 'vertical'


                    MDToolbar:
                        title: "sidebar"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.set_state()]]

                    Widget:
			<Screen2>:
			    name: "screen2"
                MDTextFieldRound:
				    id: search_word
				    multiline: False
				    icon_left : 'magnify'
				    on_text_validate : print(app.search(self.text))
                BoxLayout:

                    orientation: 'vertical'


                    MDToolbar:
                        title: "fart"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.set_state()]]

                    Widget:

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer


